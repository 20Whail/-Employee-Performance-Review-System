
<h1>Review Detail Of Employees</h1>

<table class="table table-striped table-hover">
  <thead class="thead-dark ">
  <tr>

    <th>Quality</th>
    <th>Reliability</th>
    <th>Job_knowledge</th>
    <th>Attendence</th>
    <th>Commitment</th>
    <th>Creativity</th>
    <th>Adherence_to_policy</th>
    <th>Lead</th>
    <th>Improvement_needed</th>
    <th>Accomplishments</th>
    <th>Recommendations</th>
    <th>Submitted By</th>
    <th>Action</th>
    <th colspan="3"></th>

  </tr>
  <tbody>
  <% @questions.each do |question| %>
    <% if current_user.role == "HR" %>
      <tr>
      <td><%= question.quality %></td>
      <td><%= question.reliability %></td>
      <td><%= question.job_knowledge %></td>
      <td><%= question.attendence %></td>
      <td><%= question.commitment %></td>
      <td><%= question.creativity %></td>
      <td><%= question.adherence_to_policy %></td>
      <td><%= question.lead %></td>
      <td><%= question.improvement_needed %></td>
      <td><%= question.accomplishments %></td>
      <td><%= question.recommendations %></td>
        <td><%= question.submitted_by %></td>

      <td> <%= link_to 'Show form', survey_path(id: question.id) ,  class: "btn btn-secondary" %></td>
    <%end %>
      <%end %>
  </tbody>
</table>

<style>
    .footer-clean{
        position: absolute !important;
    }
</style>
